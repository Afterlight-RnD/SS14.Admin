@page
@using SS14.Admin.Pages.Tables
@using SS14.Admin.Helpers
@model SS14.Admin.Pages.BansModel

@{
    ViewData["Title"] = "Bans";
    var highlightBan = 0;
    if (TempData.TryGetValue("HighlightNewBan", out var highlightObj))
    {
        highlightBan = (int) highlightObj;
    }
}

<div class="container">
    @if (TempData.TryGetValue("StatusMessage", out var stat))
    {
        var status = (string) stat;
        var statusMessageClass = status.StartsWith("Error") ? "danger" : "success";

        <div class="row">
            <div class="col">
                <div class="alert alert-@statusMessageClass alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    @status
                </div>
            </div>
        </div>
    }

    @if (User.IsInRole("BAN"))
    {
        <a class="btn btn-primary" asp-page="./Create">Create new ban</a>
    }
</div>


<form asp-page="./Index" method="get" class="container">
    @FormHiddenRoutes.Make(Model.AllRouteData, "search", "show")
    <div class="form-group row no-gutters">
        <label class="col-lg-3 col-form-label" for="searchBar">Search name, ID, IP or admin:</label>
        <div class="col-lg-5">
            <input type="text" id="searchBar" name="search" value="@Model.CurrentFilter" class="form-control "/>
        </div>
        <div class="col-lg-4">
            <div class="row no-gutters">
                <div class="col-6">
                    <select class="form-control " name="show">
                        <option selected="@(Model.Show == BansModel.ShowFilter.Active)" value="">Active bans</option>
                        <option selected="@(Model.Show == BansModel.ShowFilter.All)" value="all">All bans</option>
                        <option selected="@(Model.Show == BansModel.ShowFilter.Expired)" value="expired">Expired/unbanned</option>
                    </select>
                </div>
                <div class="col-3">
                    <input type="submit" value="Search" class="btn btn-primary btn-block"/>
                </div>
                <div class="col-3">
                    <a class="btn btn-danger btn-block" asp-page="./Index">Clear</a>
                </div>
            </div>
        </div>
    </div>
</form>

<partial name="Tables/Pagination" for="Pagination"/>

<table class="table table-striped mt-3">
    <thead>
    <tr>
        <th style="min-width: 210px">
            <partial name="Tables/SortTabHeaderCore" model="@(new SortTabHeaderModel(Model.SortState, "name", "Name"))"/>
            /
            <partial name="Tables/SortTabHeaderCore" model="@(new SortTabHeaderModel(Model.SortState, "uid", "User ID"))"/>
            /
            <partial name="Tables/SortTabHeaderCore" model="@(new SortTabHeaderModel(Model.SortState, "ip", "IP"))"/>
            /
            HWID
        </th>
        <th>Reason</th>
        <th style="min-width: 210px">
            <partial name="Tables/SortTabHeaderCore" model="@(new SortTabHeaderModel(Model.SortState, "time", "Ban time"))"/>
        </th>
        <th style="min-width: 210px">Expires</th>
        <th style="min-width: 140px">
            <partial name="Tables/SortTabHeaderCore" model="@(new SortTabHeaderModel(Model.SortState, "admin", "Banning admin"))"/>
        </th>
        @*<th title="If the ban was manually unbanned then the unban time is sorted by">
            <partial name="Tables/SortTabHeaderCore" model="@(new SortTabHeaderModel(Model.SortState, "expire_time", "Expiration time"))"/>
        </th>*@
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var ban in Model.Pagination.List.PaginatedItems)
    {
        var className = ban.Id == highlightBan ? "table-success" : "";
        <tr class="@className">
            <td>
                @if (ban.Name != null)
                {
                    <strong>@ban.Name</strong>
                    <br/>
                }
                @if (User.IsInRole("ADMIN"))
                {
                    if (ban.Address != null)
                    {
                        <small>
                            <strong>IP:</strong> <span class="monotype">@ban.Address</span>
                        </small>
                        <br/>
                    }
                    if (ban.Hwid != null)
                    {
                        <small>
                            <strong>HWID:</strong> <span class="monotype">@ban.Hwid</span>
                        </small>
                        <br/>
                    }
                }
                @if (ban.UserId != null)
                {
                    <small>
                        <strong>GUID:</strong> <span class="monotype">@ban.UserId</span>
                    </small>
                }
            </td>
            <td>@ban.Reason</td>
            <td>@ban.BanTime.ToString("g")</td>
            <td>
                @(ban.Expires?.ToString("g") ?? "PERMANENT")
                @if (ban.Unbanned is { } unbanned)
                {
                    var (time, admin) = unbanned;
                    <br>
                    <text><strong>Unbanned:</strong> @time.ToString("g") by @admin</text>
                }
                else if (ban.Expires < DateTime.Now)
                {
                    <br>
                    <strong>Expired</strong>
                }
            </td>
            <td>@ban.Admin</td>
            <td>
                @if (ban.Active && User.IsInRole("BAN"))
                {
                    <form asp-page-handler="Unban">
                        <input type="hidden" name="Id" value="@ban.Id">
                        <input type="submit" class="btn btn-secondary" value="Unban">
                    </form>
                }
                @if (ban.hitCount != 0)
                {
                    var plural = ban.hitCount > 1;
                    <a asp-page="Hits" class="btn btn-secondary" asp-route-ban="@ban.Id">@ban.hitCount @(plural ? "hits" : "hit")</a>
                }
                else
                {
                    <a href="#" class="btn btn-secondary disabled">0 hits</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

<partial name="Tables/Pagination" for="Pagination"/>
